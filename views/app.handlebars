<html lang="en">

<head>
  <meta charset="utf-8" />
  <title>Sky Walker</title>
  <script crossorigin src="https://unpkg.com/react@17/umd/react.development.js"></script>
  <script crossorigin src="https://unpkg.com/react-dom@17/umd/react-dom.development.js"></script>
  <link rel="shortcut icon" href="/assets/img/favicon.png" />
  <link rel="stylesheet" type="text/css" href="/assets/style.css" />
</head>

<body>
  <section class="center">
    <button id="signupButton" class="inline" disabled=true>Sign up </button></div>
    <button id="loginButton" class="inline">Login </button></div>
    <button id="changePasswordButton" class="inline hidden">Change Password</button></div>
    <button id="logoutButton" class="inline hidden"><a id = "logoutLink" href = '/logout'>Save and Quit</a></button></div>
    <input id="_csrf" type="hidden" name="_csrf" />
  </section>
  <section id="formContent">
  </section>
  <div id="game">
    <p id="createResponse">Please log in or create an account.</p>
    <div id="payModel"></div>
    <div id="playerDisplay"></div>
    <canvas width="640" height="480" id="canvas_player">
      If this message is displayed, the canvas could not be loaded. This is likely because of the browser
      you are in.
    </canvas>
    <canvas width="640" height="480" id="canvas_walkers"></canvas>
    <canvas width="640" height="480" id="canvas_bg"></canvas>
  </div>

  <div id="gameInfo">
  </div>

  <footer class="center">
    <p>By Christian Eliopoulos</p>
  </footer>

  <script src="/assets/gameBundle.js"></script>
  <script src="/assets/pageBundle.js"></script>
</body>

</html>